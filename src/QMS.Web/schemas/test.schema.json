{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Example",
  "type": "object",
  "format": "categories",
  "basicCategoryTitle": "Main",
  "required": [
    "title"
  ],
  "properties": {
    "title": {
      "type": "string",
      "title": "Titel",
      "minLength": 1
    },
    "bo_content": {
      "type": "object",
      "title": "Content",
      "properties": {
        "description": {
          "title": "Tekst",
          "type": "string",
          "format": "markdown",
          "options": {
            "simplemde": {
              "spellChecker": false,
              "autorefresh": true
            }
          }
        }
      }
    }
  }
}