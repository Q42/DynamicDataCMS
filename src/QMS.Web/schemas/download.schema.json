{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Download",
  "type": "object",
  "properties": {
    "file": {
      "type": "string",
      "format": "url",
      "options": {
        "upload": {
          "auto_upload": true,
          "upload_handler": "uploadHandler"
        }
      },
      "links": [
        {
          "href": "/cms/file/download/{{self}}",
          "mediaType": "link",
          "rel": ""
        }
      ]
    },
    "name": {
      "type": "string",
      "description": "Name"
    },
    "description": {
      "type": "string",
      "description": "Description"
    }
  }
}