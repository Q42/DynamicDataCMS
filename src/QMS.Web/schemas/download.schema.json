{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Download",
  "type": "object",
  "properties": {
    "file": {
      "type": "string",
      "format": "url",
      "options": {
        "upload": true,
        "auto_upload": true
      },
      "links": [ {
        "href": "/cms/file/download/{{self}}",
        "mediaType": "link",
        "rel": ""
      }
      ]
    },
    "name": {
      "type": "string",
      "description": "Name"
    },
    "description": {
      "type": "string",
      "description": "Description"
    }
  }
}