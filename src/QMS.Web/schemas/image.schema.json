{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Image",
  "type": "object",
  "properties": {
    "file": {
      "type": "string",
      "format": "url",
      "options": {
        "upload": {
          "auto_upload": true,
          "upload_handler": "uploadHandler",
          "micrioField": "micrioId"
        }
      },
      "links": [
        {
          "href": "/cms/image/{{self}}?w=100&h=100",
          "mediaType": "image",
          "rel": "view"
        }
      ]
    },

    "clear_image": {
      "type": "button",
      "title": "Clear Image",
      "options": {
        "field": "file",
        "button": {
          "align": "left",
          "action": "clear"
        }
      }
    },
    "micrioId": {
      "type": "string",
      "readonly": true
    },
    "name": {
      "type": "string",
      "description": "Name"
    },
    "description": {
      "type": "string",
      "description": "Description"
    }
  }
}